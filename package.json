{
  "name": "resivip",
  "version": "0.2.4",
  "author": "Brian Faga <brian@accidentaldevelopment.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn lint && yarn test && tsc",
    "lint": "eslint ./src/\\*\\*",
    "test": "DB_URL=mongodb://localhost/test nyc _mocha",
    "start": "nodemon"
  },
  "mocha": {
    "spec": [
      "test/**/*.ts"
    ],
    "file": [
      "./test/setup.ts"
    ],
    "require": [
      "./node_modules/ts-node/register",
      "./node_modules/source-map-support/register"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node src",
    "ext": "ts"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "test",
        "section": "Tests"
      },
      {
        "type": "docs",
        "section": "Docs"
      },
      {
        "type": "build",
        "section": "Build System"
      },
      {
        "type": "chore",
        "section": "Chores"
      },
      {
        "type": "ci",
        "hidden": true
      }
    ]
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src"
    ],
    "reporter": [
      "text",
      "html"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@types/chai": "^4.2.11",
    "@types/convict": "^5.2.1",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.31",
    "@types/signale": "^1.4.0",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "chai": "^4.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "mocha": "^8.0.1",
    "mocha-teamcity-reporter": "^3.0.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "prettier": "^2.0.2",
    "source-map-support": "^0.5.16",
    "standard-version": "^8.0.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.3.0",
    "apollo-server": "^2.11.0",
    "class-validator": "^0.12.2",
    "convict": "^6.0.0",
    "graphql": "^15.3.0",
    "mongoose": "^5.9.23",
    "reflect-metadata": "^0.1.13",
    "signale": "^1.4.0",
    "type-graphql": "^1.0.0-rc.3",
    "typedi": "^0.8.0"
  }
}
